{
    "compilerOptions": {
        //version of typescript
        "target":"ES2016",
        "module": "commonjs",
        //typescript files will be stored
        "rootDir": "./src",
//each line of typescript code generated by javascript
        "sourceMap": true,

        //Javascript files will be stored
        "outDir": "./dist",
        //Type checking
        "strict": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,

        
    },
    "exclude": [
        "node_modules"
    ]
}